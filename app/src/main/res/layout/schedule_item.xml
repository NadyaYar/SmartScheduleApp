<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F4F4EC"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bgNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 пара"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8:15-9:35"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="#001842"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/bgNumber" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/timeTextView"
        android:background="@android:color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/classTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Екологічне право"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/lecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Старший викладач Прокопенко Вікторія"
            android:textSize="14sp"
            android:textColor="#616161" />

        <TextView
            android:id="@+id/auditorium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аудиторія B23"
            android:textSize="14sp"
            android:textColor="#616161" />
    </LinearLayout>
</RelativeLayout>
